<style>
    .typing_result-container {
        display: flex;
        background: #907dff99;
        width: 70%;
        border-radius: 16px 16px 0 0;
        margin: 0 auto;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-top: 100px;
        padding-bottom: 100px;
    }
    
    .typing_results {
        display: flex;
        flex-direction: row;
        width: 60%;
        align-items: center;
        justify-content: center;
    }
    
    .typing_result {
        background: white;
        width: 33%;
        margin: 60px 10px 50px;
        border-radius: 16px;
        color: #907dff;
        font-weight: 400;
    }
    
    .accuracy,
    .speed,
    .time {
        font-weight: 700;
        font-size: 1.5rem;
    }
    
    .otta-container {
        display: flex;
        flex-direction: column;
        width: 60%;
    }
    
    .otta {
        width: 100%;
        text-align: left;
        color: white;
        font-size: 1.5rem;
        font-weight: 800;
        margin: 5px 0;
    }
    
    .wrong {
        width: 100%;
        text-align: left;
        background: white;
        padding: 5px;
        border-radius: 10px;
        margin: 10px 0;
    }
    
    span {
        color: #FF837B;
    }
</style>

<div class="typing_result-container">
    <div class="typing_results">
        <div class="typing_result">
            <p>정확도</p>
            <p class="accuracy">100%</p>
        </div>
        <div class="typing_result">
            <p>타수</p>
            <p class="speed">100타</p>
        </div>
        <div class="typing_result">
            <p>시간</p>
            <p class="time">10분 10초</p>
        </div>
    </div>
    <div class="otta-container">
        <p class="otta">오타 check!</p>
        <% for (let i = 1; i <=3; i++){ %>
            <p class="wrong">With only two minutes to play, both teams were fighting for the <span>feetball</span>.</p>
            <% } %>
    </div>
</div>